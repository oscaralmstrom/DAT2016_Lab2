<AnchorPane maxHeight="500.0" maxWidth="800.0" minHeight="500.0" minWidth="800.0" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="recipesearch.RecipeSearchController">
   <children>
      <StackPane prefHeight="500.0" prefWidth="800.0">
         <children>
            <SplitPane fx:id="searchPane" dividerPositions="0.35" prefHeight="160.0" prefWidth="200.0" style="-fx-background-color: #00FF00;">
              <items>
                <AnchorPane id="searchPane" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" style="-fx-background-color: #FFFFFF;">
                     <children>
                        <VBox layoutX="116.0" layoutY="139.0" prefHeight="305.0" prefWidth="153.0" spacing="20.0">
                           <children>
                              <ComboBox fx:id="ingredientComboBox" prefHeight="25.0" prefWidth="170.0" />
                              <ComboBox fx:id="cuisineComboBox" prefHeight="25.0" prefWidth="187.0" />
                              <RadioButton fx:id="allDifficultiesRadioButton" alignment="CENTER_LEFT" mnemonicParsing="false" selected="true" text="Alla">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="difficultyGroup" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="easyRadioButton" alignment="CENTER_LEFT" mnemonicParsing="false" text="Lätt" toggleGroup="$difficultyGroup" />
                              <RadioButton fx:id="mediumRadioButton" alignment="CENTER_LEFT" mnemonicParsing="false" text="Mellan" toggleGroup="$difficultyGroup" />
                              <RadioButton fx:id="hardRadioButton" alignment="CENTER_LEFT" mnemonicParsing="false" text="Svår" toggleGroup="$difficultyGroup" />
                              <Spinner fx:id="priceSpinner" editable="true" prefHeight="25.0" prefWidth="112.0" />
                              <Slider fx:id="timeSlider" majorTickUnit="20.0" max="150.0" min="10.0" minorTickCount="1" showTickMarks="true" snapToTicks="true" />
                           </children>
                        </VBox>
                        <Label alignment="CENTER_RIGHT" layoutX="25.0" layoutY="224.0" prefHeight="25.0" prefWidth="91.0" text="Svårighetsgrad: " />
                        <Label alignment="CENTER_RIGHT" layoutX="25.0" layoutY="376.0" prefHeight="25.0" prefWidth="91.0" text="Maxpris: " />
                        <Label alignment="CENTER_RIGHT" layoutX="25.0" layoutY="417.0" prefHeight="25.0" prefWidth="91.0" text="Maxtid: " />
                        <Label alignment="CENTER_RIGHT" layoutX="13.0" layoutY="139.0" prefHeight="25.0" prefWidth="103.0" text="Huvudingrediens: " />
                        <Label alignment="CENTER_RIGHT" layoutX="25.0" layoutY="184.0" prefHeight="25.0" prefWidth="91.0" text="Kök: " />
                        <Label fx:id="minuteLabel" alignment="CENTER_RIGHT" layoutX="171.0" layoutY="444.0" prefHeight="25.0" prefWidth="91.0" text="N/A minuter" />
                        <Label layoutY="53.0" prefHeight="66.0" prefWidth="276.0" text="Hitta ett recept som passar genom att ändra inställningarna nedanför" textAlignment="CENTER" wrapText="true">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <padding>
                              <Insets left="10.0" right="10.0" />
                           </padding>
                        </Label>
                     </children></AnchorPane>
                <AnchorPane id="listPane" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                     <children>
                        <ScrollPane prefHeight="498.0" prefWidth="516.0">
                           <content>
                              <FlowPane fx:id="searchFlowPane" prefHeight="404.0" prefWidth="461.0" />
                           </content>
                        </ScrollPane>
                     </children></AnchorPane>
              </items>
            </SplitPane>
            <AnchorPane id="recipeDetailPane" fx:id="detailedViewAnchorPane" prefHeight="488.0" prefWidth="697.0" style="-fx-background-color: rgba(71,71,71,0.6);">
               <children>
                  <AnchorPane layoutX="34.0" layoutY="32.0" prefHeight="436.0" prefWidth="731.0" style="-fx-background-color: rgb(255, 255, 255);">
                     <children>
                        <ImageView fx:id="detailedImageView" fitHeight="191.0" fitWidth="250.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
                        <Label fx:id="detailedLabel" layoutX="273.0" layoutY="14.0" text="Label">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Button fx:id="detailedViewCloseButton" layoutX="686.0" layoutY="14.0" mnemonicParsing="false" onAction="#closeRecipeView" style="-fx-background-color: rgba(0,0,0,0);">
                           <graphic>
                              <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@resources/icon_close.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </AnchorPane>
               </children></AnchorPane>
         </children>
      </StackPane>
   </children>
</AnchorPane>
